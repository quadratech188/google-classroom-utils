{
	"manifest_version": 2,
	"name": "Google Classroom Utils",
	"version": "0.0",
	"description": "Utilities for Google Classroom",

	"permissions": [
		"downloads",
		"nativeMessaging",
		"storage",
		"tabHide",
		"tabs"
	],

	"content_scripts": [
		{
			"matches": ["*://classroom.google.com/*"],
			"css": ["style.css"],
			"js": ["content-actions.js", "inject-links.js"]
		}
	],

	"background": {
		"scripts": ["util.js", "move-download.js", "background-actions.js"]
	},

	"web_accessible_resources": [
		"path-chooser.html"
	],

	"browser_specific_settings": {
		"gecko": {
			"id": "google-classroom-utils@quadratech188"
		}
	}
}
